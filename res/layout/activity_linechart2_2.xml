<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    	<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" 
		    android:orientation="vertical"
		    android:layout_weight="1"
		    android:layout_marginTop="60dp"
	    	>
	    	<Button android:id="@+id/btn_recent2"    
	            android:layout_width="wrap_content"    
	            android:layout_height="wrap_content"    
	            android:text="近期数据"
	            android:textSize="12dp"
	            android:layout_toLeftOf="@+id/btn_pickDate2"
	            android:width="80dp"
	            android:height="12dp"/>
	    	<Button android:id="@+id/btn_pickDate2"    
	            android:layout_width="wrap_content"    
	            android:layout_height="wrap_content"    
	            android:text="选择日期"
	            android:textSize="12dp"
	            android:width="80dp"
	            android:height="12dp"
	            android:layout_alignParentRight ="true"
	            android:layout_marginRight="30dp"
	            />
			
		    <com.github.mikephil.charting.charts.LineChart
	        android:id="@+id/chart_history2"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/btn_recent2"
	       
	       />
	    </RelativeLayout>
	    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal"
	    android:layout_weight="3"
	    android:layout_marginLeft="12dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="40dp">
	   <com.kankan.wheel.widget.WheelView 
	       android:id="@+id/chart2_list2"
	       android:layout_height="match_parent"
	       android:layout_width="wrap_content"
		
		        />
	</LinearLayout>
</LinearLayout>

